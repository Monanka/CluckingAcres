<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Report"
        android:textColor="#006400"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDailyReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#006400"
        android:text="Daily Report:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewDailyEggCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#006400"
        android:text="Eggs Harvested: 0"/>

    <TextView
        android:id="@+id/textViewDailyFeedsGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#006400"
        android:text="Feeds Given: 0"/>

    <TextView
        android:id="@+id/textViewDailyVaccinationsGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#006400"
        android:text="Vaccinations Given: 0"/>

    <TextView
        android:id="@+id/textViewWeeklyReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Report:"
        android:textColor="#006400"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewWeeklyEggCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eggs Harvested: 0"
        android:textColor="#006400" />

    <TextView
        android:id="@+id/textViewWeeklyFeedsGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#006400"
        android:text="Feeds Given: 0"/>

    <TextView
        android:id="@+id/textViewWeeklyVaccinationsGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#006400"
        android:text="Vaccinations Given: 0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>